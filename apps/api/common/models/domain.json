{
  "name": "Domain",
  "description": "Manage System Domains and related content",
  "base": "BaseModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "String",
      "id": true,
      "required": true
    },
    "name": {
      "type": "String",
      "required": true
    },
    "email": {
      "type": "String",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "events": {
      "type": "hasMany",
      "model": "Event"
    },
    "files": {
      "type": "hasMany",
      "model": "StorageFile",
      "foreignKey": "container"
    },
    "pages": {
      "type": "hasMany",
      "model": "Page"
    },
    "posts": {
      "type": "hasMany",
      "model": "Post"
    },
    "products": {
      "type": "hasMany",
      "model": "Product"
    },
    "users": {
      "type": "hasMany",
      "model": "user"
    }
  },
  "acls": [],
  "methods": {
    "prototype.importFileByUrl": {
      "accepts": [
        {
          "arg": "url",
          "type": "String",
          "required": true
        },
        {
          "arg": "fileName",
          "type": "String",
          "required": false
        }
      ],
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Import a file by URL",
      "http": {
        "path": "/importFileByUrl",
        "verb": "post"
      }
    }
  }
}
